<?xml version="1.0" encoding="utf-8"?>
<!-- rounded_square_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Set the border color to black -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as desired -->
        </shape>
    </item>
</layer-list>
